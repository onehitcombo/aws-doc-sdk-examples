{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "groundstation:GetMissionProfile"
            ],
            "Resource": [
                "arn:aws:groundstation:us-west-2:123456789012:mission-profile/MP1234"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "groundstation:GetConfig"
            ],
            "Resource": [
                "arn:aws:groundstation:us-west-2:123456789012:config/tracking/Config1234"
            
        },
        {
            "Effect": "Allow",
            "Action": [
                "groundstation:GetDataflowEndpointGroup"
            ],
            "Resource": [
                "arn:aws:groundstation:us-west-2:123456789012:dataflow-endpoint-group/DFEG1234"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "groundstation:GetSatellite"
            ],
            "Resource": [
                "arn:aws:groundstation:*:123456789012:satellite/Satellite1234"
            ]
        }
    ]
}
// snippet-end:[groundstation.english.whitelist.section_a]
